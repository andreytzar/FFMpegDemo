<Page x:Class="FFMpegDemo.Pages.PagePlayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FFMpegDemo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePlayer">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False">
            <TextBlock Text="Приклад FFMPEG Плеєру" FontSize="18" DockPanel.Dock="Top"/>
            <Separator DockPanel.Dock="Top"/>
        </DockPanel>
        <Grid Margin="3" Grid.Row="1" Background="DarkGray">
            <Image Source="{Binding VideoBitmap}" Stretch="Uniform"/>
            <TextBlock Text="{Binding Error, UpdateSourceTrigger=PropertyChanged}" Foreground="AliceBlue" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <DockPanel >
                <TextBlock Text="File" VerticalAlignment="Stretch" DockPanel.Dock="Left"/>
                <Button Content="Open" Command="{Binding BCOpenFile}" Background="{x:Null}" DockPanel.Dock="Right"/>
                <TextBox Text="{Binding file}" DockPanel.Dock="Left" Margin="5,0"/>
            </DockPanel>
        </Grid>
    </Grid>
</Page>
